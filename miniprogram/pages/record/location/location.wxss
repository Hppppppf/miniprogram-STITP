page {
  height: 100%;
}
.addLocation{
  display:flex;
  height: 100%;
  justify-content: center;
  align-items:center;
}
.addlocation-image{
  width: 180rpx;
  height: 180rpx;
}
.addLocation-view{
  color: #dbdbdb;
  font-size:12px;
  height: 40rpx;
  text-align: center;
}
.addBar {
  width: 100%;
  height: 80rpx;
  padding: 10rpx 0;
  position: fixed;
  bottom: 0;
  left: 0;
  align-items:center; 
  flex-direction: row;
  flex-wrap: nowrap;           
}
.addButton{
  height: 100%;
  display: flex;
  justify-content: center;
  align-items:center;
}
.addImage{
  width: 40rpx;
  height: 40rpx;
}

.location-item{
  display: flex;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #ececec;
  justify-content:space-between;
}
.location-deatil{
  font-weight: bold;
  font-size: 20px;
}
.location-name{
  flex-direction: row;
  flex-wrap: nowrap;
  color: #757373;
  font-size: 16px;
}
.location-modify{
  display: flex;
  justify-content: center;
  align-items:center;
}
.location-modifyimage{
  width: 45rpx;
  height: 45rpx;
}